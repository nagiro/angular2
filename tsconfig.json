{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es5", "dom"],    
    "typeRoots": ["./node_modules/@types"],
    "compileOnSave": true    
  },
  "filesGlob": [
        "./app/**/*.component.ts",        
        "./app/**/*.module.ts",
        "!./app/node_modules/**/*.ts"
    ]

}