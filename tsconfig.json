{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "watch": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ],
    "filesGlob": [
        "./app/**/*.component.ts",        
        "./app/**/*.module.ts",
        "!./app/node_modules/**/*.ts"
    ]

}